{# ./templates/default/mypdf.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<title>Tus entradas</title>
</head>

<body>
	<div class="header">
		<img class="logo" src="./logo.png" alt="logo del Pedralbes Cinema" />
	</div>

	<div class="conatiner text-center justify-content-center align-items-center">	
		<div class="container2 shadow-lg p-3 mb-5 bg-body rounded">
			<h3>{{ sesion }}</h3>
			<h5>Usuario: {{ usuario }}</h5>
				
			<div class="d-flex justify-content-center">
				
				<table class="table shadow-lg p-3 mb-5 bg-body rounded">
						
					<tr>
						<th class="table-dark">Butacas</th>
					</tr>
						
					<tbody>
						{% for b in butaca %}
							<tr>
								<td>{{ b }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>		
</body>

</html>



<style>

body {
	width: 100%;
	margin: auto;
	font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.header {
  background-color: black !important;
  color: white;
  height: 120px;
  display: flex;
  justify-content: center;
}

.logo {
	padding: 10px;
	height: 120px;
}

.conatiner {
	height: 80vh;
	display: flex;
	flex-direction: column;
}

h3 {
	font-weight: bold;
	margin-bottom: 50px;
}

th {
	font-size: 20px;
}

table {
	margin-top: 25px;
}

.container2 {
	background-color: #dadada !important;
	padding: 60px !important;
	border-radius: 8px;
}

</style>
